{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with g++ into ./bin/",
            "type": "shell",
            "linux": {
                "command": "g++",
                "args": [
                    "-g", "-Wall", "-std=c++11", "-o", "bin/${fileBasenameNoExtension}", "'${file}'",
                    "'${workspaceFolder}/rawImages.cpp'"
                ],
            },
            "windows": {
                "command": "g++",
                "args": [
                    "-g", "-Wall", "-std=c++11", "-o", ".\\bin\\${fileBasenameNoExtension}.exe", "${relativeFile}",
                    "\"${workspaceFolder}\\rawImages.cpp\""
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        },
    ]
}